import java.util.Scanner;

public class 달팽이_2869 {
	public static void main(String[] args) {
		System.out.println("A, B, V");
		Scanner sc = new Scanner(System.in);
		int A= sc.nextInt();
		int B= sc.nextInt(); 
		int V= sc.nextInt();
		
		V -= B;
		int day = V / (A - B);  
		
		if(V % (A - B) != 0) {
			day++;  
		}
		   
		System.out.println(day);
		
	}
}
  